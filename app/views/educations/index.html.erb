<div class="jumbotron container" style="background-color:silver;">
<h1>Child Education</h1>

<div class="container">

	<% @educations.each do |education|%>
		<div  class ="row">
			<div class = "col col-md-3">
				<%=link_to education.name, education_path(education)%>
			</div>
			<div class = "col col-md-5">
				<%= education.bio%><%=link_to "...read more", education_path(education)%>
			</div>
			<div class = "col col-md-4">
				<%= link_to "Edit", edit_education_path(education)%>
				<%= link_to "Delete", education, method: :delete, data: {confirm: "sure?"} %>
			</div>
		</div>
	<%end%>
</div>
