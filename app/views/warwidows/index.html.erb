<h1>War Widows </h1>

<table border = 2>
<th> Name</th>
<th>bio</th>
<tr> 

<% @warwidows.each do |warwidow|%>
<td><%= link_to warwidow.name, warwidow_path(warwidow)%></td>
<td><%= warwidow.bio%></td>
<td><%= link_to "Edit", edit_warwidow_path(warwidow)%></td>
